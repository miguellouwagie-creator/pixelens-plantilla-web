---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
import { client } from "../lib/sanity";

const datos = await client.fetch(`*[_type == "ajustes"][0]`);
const config = datos?.configReservas;
---

<Layout title={`Contactar | ${datos?.nombreRestaurante || "Restaurante"}`}>
  <Navbar />

  <main class="container mx-auto px-6 py-16">
    <div class="text-center mb-16">
      <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-6 font-serif">Reservas</h1>
      <p class="text-gray-500 text-lg max-w-2xl mx-auto font-light">
        Configura tu experiencia perfecta.
      </p>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 max-w-6xl mx-auto">
      
      <div class="space-y-10 h-full flex flex-col">
        <div class="bg-stone-50 p-10 border-l-4 border-orange-700 shadow-sm flex-grow">
          <h2 class="text-2xl font-bold text-gray-900 mb-8 font-serif">Informaci√≥n</h2>
          <ul class="space-y-6 text-gray-600">
            <li class="flex items-start"><span class="text-orange-700 mr-4 text-xl">üìç</span><span>{datos?.direccion}</span></li>
            <li class="flex items-start"><span class="text-orange-700 mr-4 text-xl">üìû</span><a href={`tel:${datos?.telefono}`} class="font-bold">{datos?.telefono}</a></li>
            <li class="flex items-start"><span class="text-orange-700 mr-4 text-xl">üìß</span><span>{datos?.email}</span></li>
          </ul>
        </div>
        <div class="h-64 bg-gray-200 shadow-md rounded-b-xl overflow-hidden">
           <iframe src="TU_URL_DE_GOOGLE_MAPS" width="100%" height="100%" style="border:0;" allowfullscreen="" loading="lazy" class="filter grayscale hover:grayscale-0 transition duration-700"></iframe>
        </div>
      </div>

      <div class="bg-white p-10 shadow-2xl border-t-4 border-gray-900 relative">
        <h2 class="text-2xl font-bold text-gray-900 mb-8 font-serif">Solicitar Mesa</h2>
        
        <form name="reservas" method="POST" data-netlify="true" class="space-y-6">
          <input type="hidden" name="form-name" value="reservas" />

          <div class="grid grid-cols-2 gap-6">
            <div>
                <label class="block text-xs font-bold text-gray-500 uppercase mb-2">Fecha</label>
                <input type="date" name="fecha" required class="w-full px-4 py-3 bg-gray-50 border-b-2 border-gray-200 focus:border-orange-700 outline-none" />
            </div>
            <div>
                <label class="block text-xs font-bold text-gray-500 uppercase mb-2">Hora</label>
                <select name="hora" class="w-full px-4 py-3 bg-gray-50 border-b-2 border-gray-200 focus:border-orange-700 outline-none">
                    {config?.horarios ? config.horarios.map((h: any) => <option value={h}>{h}</option>) : <option>Turnos no definidos</option>}
                </select>
            </div>
          </div>

          <div class="grid grid-cols-2 gap-6">
            <div>
                <label class="block text-xs font-bold text-gray-500 uppercase mb-2">Personas</label>
                <select name="personas" class="w-full px-4 py-3 bg-gray-50 border-b-2 border-gray-200 focus:border-orange-700 outline-none">
                    {config?.opcionesComensales ? config.opcionesComensales.map((c: any) => <option value={c}>{c}</option>) : <option>Consultar</option>}
                </select>
            </div>
            <div>
                <label class="block text-xs font-bold text-gray-500 uppercase mb-2">Zona</label>
                <select name="zona" class="w-full px-4 py-3 bg-gray-50 border-b-2 border-gray-200 focus:border-orange-700 outline-none">
                    {config?.zonas ? config.zonas.map((z: any) => <option value={z}>{z}</option>) : <option>Cualquiera</option>}
                </select>
            </div>
          </div>

          <div>
            <label class="block text-xs font-bold text-gray-500 uppercase mb-2">Nombre</label>
            <input type="text" name="nombre" placeholder="Tu nombre" required class="w-full px-4 py-3 bg-gray-50 border-b-2 border-gray-200 focus:border-orange-700 outline-none" />
          </div>
          <div>
            <label class="block text-xs font-bold text-gray-500 uppercase mb-2">Tel√©fono</label>
            <input type="tel" name="telefono" placeholder="600 000 000" required class="w-full px-4 py-3 bg-gray-50 border-b-2 border-gray-200 focus:border-orange-700 outline-none" />
          </div>

          <button type="submit" class="w-full bg-gray-900 text-white font-bold py-4 hover:bg-orange-700 transition-colors uppercase tracking-widest text-sm">
            Enviar Solicitud
          </button>
          <p class="text-xs text-gray-400 text-center">* Te confirmaremos disponibilidad por email/tel√©fono.</p>
        </form>
      </div>

    </div>
  </main>
  <Footer />
</Layout>